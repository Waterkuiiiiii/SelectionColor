{
    "name": "SelectionColor",
    "description": "Change your browser selection color.",
    "version": "0.1",
    "manifest_version": 3,
    "icons": {
        "16": "./image/SelectionColor_16.png",
        "48": "./image/SelectionColor_48.png",
        "128": "./image/SelectionColor_128.png"
    },
    "action": {
        "default_icon": "./image/SelectionColor_48.png",
        "default_popup": "./popup.html"
    },
    "content_scripts":[
        {
            "matches": ["<all_urls>"],
            "css": ["./css/injectedStyle.css"]
        }
    ]
}